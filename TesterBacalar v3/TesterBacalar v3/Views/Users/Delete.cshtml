@model TesterBacalar_v3.Users

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Ви впевнені що хочете видалити даного користувача?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Іd Користувача
        </dt>
        <dd>
            @Html.DisplayFor(model => model.user_id_)
        </dd>

        <dt>
            Логін
        </dt>

        <dd>
            @Html.DisplayFor(model => model.login)
        </dd>

        <dt>
            Пароль
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            Ім*я
        </dt>

        <dd>
            @Html.DisplayFor(model => model.first_name)
        </dd>

        <dt>
            Прізвище
        </dt>

        <dd>
            @Html.DisplayFor(model => model.last_name)
        </dd>

        <dt>
            Адмін/Не адмін
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_admin)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутися назад до списку", "UsersAdminstr")
        </div>
    }
</div>
